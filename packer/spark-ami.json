{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-aafd77c2",
    "instance_type": "t2.medium",
    "ssh_username": "ec2-user",
    "ami_name": "spark on Centos 6.5 x64 {{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "script": "../scripts/install.sh",
    "pause_before": "10s"
  }]
}